{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
	    "semi" : [2, "always"],
	    "no-undef": [0, "always"]
    },
    "overrides": [
        {
            "files": "**/node_modules/**",
            "rules": {
                "strict": "off"
            }
        }
    ]
}
